/*
 *  Check if given string is permutation, Solution O(N)
 *
 */

#include <iostream>
#include <string>
#include <conio.h>
#include <map>
#include <algorithm>

using namespace std;

bool checkPermutation(string temp1, string temp2)
{
	if (temp1.length() != temp2.length())
		return false;
	int arr[256] = { 0 };
	for (int i = 0; i < temp1.length(); i++)
		arr[temp1[i]] = 1;
	for (int i = 0; i < temp2.length(); i++)
		if (arr[temp2[i]] != 1)
			return false;
	return true;
}

int main()
{
	string temp1 = "Tanuj ";
	string temp2 = "junaT";
	checkPermutation(temp1, temp2) ? cout << "Yes palindrome" : cout << "No Palindrome";
	_getch();
}