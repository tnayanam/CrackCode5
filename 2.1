/*
 *  Reversing a string when character pointer is given, Solution O(N)
 *
 */

#include <iostream>
#include <string>
#include <conio.h>
#include <map>
#include <algorithm>

using namespace std;

void reverseString(char *temp)
{
	if (*temp == NULL) {
		return;
	}
	string t = "";
	while (*temp != '\0')
	{
		t = t + *temp;
		temp++;
	}
	reverse(t.begin(), t.end());
	  cout << *temp;
}

